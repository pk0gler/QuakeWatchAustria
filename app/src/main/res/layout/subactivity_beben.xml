<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/LayoutDatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/datum"
            android:id="@+id/editText"
            android:editable="false"
            android:focusable="false"
            android:clickable="true"
            android:inputType="date"
            android:gravity="center"
            android:layout_above="@+id/editText2"
            android:layout_centerHorizontal="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/LayoutZeit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/LayoutDatum"
        android:layout_alignLeft="@+id/LayoutDatum"
        android:layout_alignStart="@+id/LayoutDatum">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="@string/zeit"
            android:editable="false"
            android:focusable="false"
            android:clickable="true"
            android:gravity="center"
            android:layout_below="@+id/LayoutZeit"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"
            android:layout_marginTop="41dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/LayoutOrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LayoutZeit"
        android:layout_alignStart="@+id/LayoutZeit"
        android:layout_below="@+id/LayoutZeit"
        android:layout_marginTop="33dp"
        android:layout_alignRight="@+id/LayoutZeit"
        android:layout_alignEnd="@+id/LayoutZeit">

        <EditText
            android:id="@+id/Ort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/LayoutZeit"
            android:layout_alignLeft="@+id/LayoutZeit"
            android:layout_alignRight="@+id/LayoutZeit"
            android:layout_alignStart="@+id/LayoutZeit"
            android:layout_below="@+id/LayoutZeit"
            android:autoText="false"
            android:hint="@string/ort"
            android:gravity="center"
            android:inputType="textCapWords"
            />
    </android.support.design.widget.TextInputLayout>

</RelativeLayout>