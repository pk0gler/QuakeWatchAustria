<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/ColorPrimary">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="45sp"
            android:elevation="10dp"
            android:clickable="false"
            android:text="3.0"
            android:id="@+id/textMag"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp" />

        <TextView
            android:elevation="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Unzmarkt /Ã–sterreich"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:id="@+id/textViewLocation"
            android:gravity="center_vertical"
            android:layout_alignTop="@+id/textMag"
            android:layout_toRightOf="@+id/textMag"
            android:layout_toEndOf="@+id/textMag"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:elevation="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2015-10-2"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:id="@+id/textDate"
            android:gravity="center_vertical"
            android:layout_below="@+id/textViewLocation"
            android:layout_alignStart="@+id/textViewLocation"
            android:layout_marginTop="10dp" />

        <TextView
            android:elevation="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="23:09"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:id="@+id/textTime"
            android:gravity="center_vertical"
            android:layout_below="@+id/textViewLocation"
            android:layout_toRightOf="@+id/textDate"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_below="@id/header">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:clickable="false"
            android:listSelector="@android:color/transparent"
            android:paddingTop="0dp"></ListView>

    </RelativeLayout>

</RelativeLayout>