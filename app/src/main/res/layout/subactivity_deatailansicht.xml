<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detailLayout">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/detailImg"
        android:background="@color/ColorPrimary"
        android:text="Wien, Oesterreich"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:elevation="5dp"
        android:layout_alignParentEnd="true"
        android:cropToPadding="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60sp"
        android:elevation="10dp"
        android:text="3.0"
        android:id="@+id/textMag"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:elevation="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Unzmarkt /Ã–sterreich"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:id="@+id/textViewLocation"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/textMag"
        android:layout_toRightOf="@+id/textMag"
        android:layout_toEndOf="@+id/textMag"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:elevation="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2015-10-2"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:id="@+id/textDate"
        android:gravity="center_vertical"
        android:layout_below="@+id/textViewLocation"
        android:layout_alignStart="@+id/textViewLocation"
        android:layout_marginTop="10dp" />

    <TextView
        android:elevation="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="23:09"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:id="@+id/textTime"
        android:gravity="center_vertical"
        android:layout_below="@+id/textViewLocation"
        android:layout_toRightOf="@+id/textDate"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp" />

    <android.support.design.widget.FloatingActionButton
        android:elevation="10dp"
        android:id="@+id/fab_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/map"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/detailImg"
        android:layout_marginTop="-28dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        android:layout_below="@+id/detailImg"
        android:clickable="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="0dp"
        android:paddingTop="15dp" />


</RelativeLayout>