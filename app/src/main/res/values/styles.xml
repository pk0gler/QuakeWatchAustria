<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary"> @color/ColorPrimary</item>
        <item name="colorPrimaryDark"> @color/ColorPrimaryDark</item>
        <item name="android:popupMenuStyle">@style/PopUp</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>
    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


    <style name="ThemeToolbar" parent="Base.ThemeOverlay.AppCompat.Dark">
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <item name="android:textColorPrimary">#FFFFFF </item>
        <item name="android:color">#FFFFFF </item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="PopUp" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground"> @color/ColorPrimary </item>
    </style>

</resources>
